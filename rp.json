{
  "configuration": {
    "database":     "MongoDB",
    "databaseName": "roleplayDatabase",
    "store":        true,
    "storeType":    "Redis",
    "storeName":    "roleplayStore",
    "https":        false,
    "explict":      false,
    "shorthand":    true
  },

  "roles": ["super-admin", "admin", "author"],

  "access": {
    "/": {
      "read": ["ALL"]
    },
    "/api/v1/***": {
      "CRUD": ["ALL"]
    },
    "/api/v1/user": {
      "CRUD": [0, 1]
    },
    "/api/v1/admin": {
      "create": [0],
      "read":   [0, 1],
      "update": [0],
      "delete": [0]
    }
  }
}
