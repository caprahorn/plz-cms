{
  "configuration": {
    "database":     "MongoDB",
    "databaseName": "roleplayDatabase",
    "store":        true,
    "storeType":    "Redis",
    "storeName":    "roleplayStore",
    "https":        false,
    "explict":      false,
    "shorthand":    false
  },

  "roles": ["super-admin", "admin", "author"],

  "access": {
    "/": {
      "read": ["ALL"]
    },
    "/api/v1/***": {
      "CRUD": ["ALL"]
    },
    "/api/v1/user": {
      "CRUD": ["super-admin", "admin"]
    },
    "/api/v1/admin": {
      "create": ["super-admin"],
      "read":   ["super-admin", "admin"],
      "update": ["super-admin"],
      "delete": ["super-admin"]
    }
  }
}
